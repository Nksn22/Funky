<Profile>
  <Name>Bounty A1 Fields Rathe</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>True</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1"  />
  
    <Order>
      <ToggleTargeting combat="True" killRadius="100" looting="True" lootRadius="100" />

      <If condition="CurrentLevelAreaId != 19952 and CurrentLevelAreaId != 102300 and CurrentLevelAreaId != 165798">
        <FunkyWaypoint ID="8" />
        <WaitTimer questId="312429" stepId="2" waitTime="500" />
      </If>
      
      <If condition="CurrentLevelAreaId == 19952">
        <TrinityExploreDungeon questId="312429" stepId="2" until="ObjectFound" exitNameHash="0" actorId="176001" pathPrecision="25" boxSize="15" boxTolerance="0.55" objectDistance="35">
          <AlternateActors>
            <AlternateActor actorId="0" objectDistance="45" />
          </AlternateActors>
          <IgnoreScenes>
            <IgnoreScene sceneName="Exit" />
          </IgnoreScenes>
        </TrinityExploreDungeon>
        
        <MoveToActor questId="312429" stepId="2" actorId="176001" interactRange="8" isPortal="True" destinationWorldId="102299" />
      </If>
      
      <If condition="CurrentLevelAreaId == 102300">
        <WaitTimer questId="312429" stepId="2" waitTime="500" />
        <TrinityExploreDungeon questId="312429" stepId="2" until="ExitFound" exitNameHash="1070710596" actorId="0" pathPrecision="25" boxSize="15" boxTolerance="0.55" objectDistance="25" />
        <MoveToActor questId="312429" stepId="2" actorId="176002" interactRange="8" isPortal="True" destinationWorldId="165797" />
      </If>

      <If condition="CurrentLevelAreaId == 165798">
        <WaitTimer questId="312429" stepId="2" waitTime="500" />
        <SafeMoveTo questId="312429" stepId="2" x="579" y="521" z="0" pathPrecision="5" pathPointLimit="250" statusText="" />
        <SafeMoveTo questId="312429" stepId="2" x="600" y="573" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
       
        <If condition="ActorExistsAt(76907, 599.585, 572.5842, -4.9, 20)">
          <MoveToActor questId="312429" stepId="2" actorId="76907" interactRange="8" />
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
        </If>
  
        <!-- Rotate Around The Circle While we wait until the three die!-->
        <While condition="not ActorExistsAt(76907, 543.6171, 579.8087, -4.9, 20)">
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
          <SafeMoveTo questId="312429" stepId="2" x="580" y="556" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
          <SafeMoveTo questId="312429" stepId="2" x="544" y="580" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
          <SafeMoveTo questId="312429" stepId="2" x="577" y="605" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
          <SafeMoveTo questId="312429" stepId="2" x="606" y="575" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
        </While>

        <SafeMoveTo questId="312429" stepId="2" x="544" y="580" z="-5" pathPrecision="5" pathPointLimit="250" statusText="" />
        <MoveToActor questId="312429" stepId="2" actorId="76907" interactRange="8" />
      </If>

      <LoadProfile profile="_Act1BountyLoader.xml" />

    </Order>

</Profile>