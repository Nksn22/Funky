<!-- FesteringWoods -->
<Profile>
<Name>Clear the Crypt of the Ancients</Name>
<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>

	<HaveBounty questId="345517">
    
    <If condition="CurrentLevelAreaId != 19953 and CurrentWorldId != 60394">
      <FunkyWaypoint waypointNumber="10" questId="1"/>
    </If>
    
    <WaitTimer questId="1" stepId="2" waitTime="2000" />

    <!-- GizmoType: Portal Name: g_Portal_Square_Orange-41042 ActorSNO: 176008 Distance: 19.43734 Position: <307.9307, 881.0613, 16.65557> Barracade: False Radius: 9.173191 -->
    <If condition="CurrentWorldId == 71150">
      <TrinityExploreDungeon questId="312429" stepId="2" until="ExitFound" exitNameHash="976523526" pathPrecision="25" boxSize="20" boxTolerance="0.18" objectDistance="25">
        <PriorityScenes>
          <PriorityScene sceneName="Entrance" />
        </PriorityScenes>
        <IgnoreScenes>
          <IgnoreScene sceneName="Exit" />
        </IgnoreScenes>
      </TrinityExploreDungeon>

      <MoveToActor questId="312429" stepId="2" actorId="176008" interactRange="15" isPortal="True" pathPointLimit="50" destinationWorldId="60394" />
     <!-- <MoveToMapMarker questId="312429" stepId="2" markerNameHash="976523526" actorId="176008" interactRange="20" pathPrecision="5" pathPointLimit="250" isPortal="True" destinationWorldId="60394" statusText="" /> -->
      <WaitTimer questId="1" stepId="2" waitTime="2000" />
		</If>
		
		<!-- Clear out the crypt -->
		<If condition="CurrentWorldId == 60394">
      <FunkyClustering enabled="false" />
			<TrinityExploreDungeon questId="1" stepId="2" until="FullyExplored" boxTolerance="0.10" boxSize="10" stayAfterBounty="False"/>
		</If>

	</HaveBounty>
	 <LoadProfile profile="_Act1BountyLoader.xml" />
	
</Order>
</Profile>