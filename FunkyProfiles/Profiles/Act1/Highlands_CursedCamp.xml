<Profile>
  <Name>Bounty A1 Highlands Cursed Camp</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>True</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1"  />
  
    <Order>
      <ToggleTargeting combat="True" killRadius="100" looting="True" lootRadius="100" />

      <If condition="CurrentLevelAreaId != 93632 and CurrentLevelAreaId != 19940">
        <FunkyWaypoint ID="13" />
        <WaitTimer questId="312429" stepId="2" waitTime="500" />
      </If>

      <If condition="CurrentLevelAreaId == 93632">
        <TrinityUseOnce id="1">
          <SafeMoveTo questId="312429" stepId="2" x="2384" y="4828" z="0" pathPrecision="5" pathPointLimit="250" statusText="" />
        </TrinityUseOnce>
        <TrinityUseOnce id="2">
          <SafeMoveTo questId="312429" stepId="2" x="2387" y="4649" z="2" pathPrecision="5" pathPointLimit="250" statusText="" />
        </TrinityUseOnce>
        <TrinityUseOnce id="3">
          <SafeMoveTo questId="312429" stepId="2" x="2398" y="4519" z="-2" pathPrecision="5" pathPointLimit="250" statusText="" />
        </TrinityUseOnce>
      </If>
      
      <!-- Ignored Scenes: , -->
      <If condition="CurrentLevelAreaId == 19940">
        <WaitTimer questId="312429" stepId="2" waitTime="500" />
        <TrinityExploreDungeon questId="312429" stepId="2" until="ObjectFound" exitNameHash="0" actorId="364601" pathPrecision="25" boxSize="15" boxTolerance="0.55" objectDistance="35">
          <PriorityScenes>
            <PriorityScene sceneName="Battlements_" />
          </PriorityScenes>
          <AlternateActors>
            <AlternateActor actorId="363725" objectDistance="45" />
          </AlternateActors>
          <IgnoreScenes>
            <IgnoreScene sceneName="Entrance_E05" />
            <IgnoreScene sceneName="Entrance_E06" />
            <IgnoreScene sceneName="Entrance_E07" />
            <IgnoreScene sceneName="Entrance_E08" />
          </IgnoreScenes>
        </TrinityExploreDungeon>

        <FunkyClustering enabled="false" />

        <While condition="ActorExistsAt(364601, ZetaDia.Me.Position.X, ZetaDia.Me.Position.Y, ZetaDia.Me.Position.Z, 100)">
          <MoveToActor questId="312429" stepId="2" actorId="364601" interactRange="8" />
          <WaitTimer questId="312429" stepId="2" waitTime="10000" />
        </While>


        <WaitTimer questId="312429" stepId="2" waitTime="2500" />
      </If>
      

      <LoadProfile profile="_Act1BountyLoader.xml" />
    </Order>

</Profile>